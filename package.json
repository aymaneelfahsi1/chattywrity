{
  "name": "chattywrity",
  "version": "1.0.0",
  "description": "Windows speech-to-text app using Whisper, activated by Ctrl+Spacebar",
  "main": "dist/main/index.js",
  "scripts": {
    "postcompile": "copy /Y src\\renderer\\*.html dist\\renderer\\ && copy /Y src\\renderer\\*.css dist\\renderer\\",
    "dev": "tsc && npm run postcompile && electron .",
    "build": "tsc && npm run postcompile && electron-builder",
    "compile": "tsc && npm run postcompile"
  },
  "author": "",
  "license": "GPL-3.0",
  "dependencies": {
    "active-win": "^8.1.0",
    "ffmpeg-static": "^5.3.0",
    "nodejs-whisper": "^0.1.18",
    "robotjs": "^0.6.0",
    "winreg": "^1.2.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.chattywrity.app",
    "productName": "ChattyWrity",
    "npmRebuild": false,
    "compression": "store",
    "win": {
      "target": "nsis",
      "icon": "resources/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "resources/**/*"
    ],
    "extraResources": [
      {
        "from": "models",
        "to": "models"
      }
    ],
    "asarUnpack": [
      "**/node_modules/nodejs-whisper/**/*",
      "**/node_modules/ffmpeg-static/**/*"
    ]
  }
}